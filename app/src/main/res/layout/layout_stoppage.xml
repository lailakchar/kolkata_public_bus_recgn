<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/dark_blue">


    <View
        android:id="@+id/view3"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@color/off_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/red_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stopage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Shapoorji"
        android:textColor="@color/light_pink"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/status"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/status" />

    <TextView
        android:id="@+id/last_spotted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_pink"
        android:textSize="15sp"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/stopage_name"
        app:layout_constraintTop_toBottomOf="@+id/stopage_name"
        android:layout_marginStart="10dp"/>

    <View
        android:id="@+id/bus_icon"
        android:visibility="gone"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/bus"
        app:layout_constraintEnd_toEndOf="@+id/status"
        app:layout_constraintStart_toStartOf="@+id/status"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>